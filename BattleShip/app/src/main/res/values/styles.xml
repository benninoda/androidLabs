<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="button_red">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    <item name="android:background">@drawable/button_red</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">16dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:positiveButtonText">#FF0000</item>
    <item name="android:negativeButtonText">@color/white</item>
</style>

<style name="button_white">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    <item name="android:background">@drawable/button_white</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">16dp</item>
    <item name="android:textColor">@color/startButton</item>
    <item name="android:positiveButtonText">#FF0000</item>
    <item name="android:negativeButtonText">@color/white</item>
</style>

    <style name="PopupStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/neucha</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="SingleDigitStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/neucha</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="SingleCharacterStyle" parent="SingleDigitStyle">
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/square_background</item>
        <item name="android:fontFamily">@font/neucha</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:paddingStart">@dimen/dimen_8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

</resources>